<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#455A64</item>
        <item name="colorPrimaryDark">#263238</item>
        <item name="colorAccent">#37474F</item>
    </style>

    <style name="Questions">
        <!-- This style is for only Questions. -->
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AnswersAtoC">
        <!-- This style is for only Answers A to C. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">8dp</item>

    </style>

    <style name="AnswersBtoD">
        <!-- This style is for only Answers B to D. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
